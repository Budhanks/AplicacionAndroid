<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F0F4F8"
    android:fitsSystemWindows="true">

    <!-- Título con subtítulo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎨 Drawing Studio"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#1A365D"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea arte increíble"
            android:textSize="16sp"
            android:textColor="#4A5568"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnGoToDrawingApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✨ ¡A dibujar!"
        android:layout_marginBottom="16dp"
        android:padding="18dp"
        android:backgroundTint="#E53E3E"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnGoToCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ℹ️ Créditos"
        android:padding="18dp"
        android:backgroundTint="#319795"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>